@model IEnumerable<App.Entities.Reportes.ReporteCertificacion>

@{
    ViewBag.Title = "Certificación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte Porcentaje de Certificación</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Reportes</a>
            </li>
            <li class="active">
                <strong>Porcentaje de Certificación</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
     
 <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1"> Mensual</a></li>
                    @*<li class=""><a data-toggle="tab" href="#tab-2">Importación/Exportación</a></li>*@
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>
                                                Año
                                            </th>
                                            <th>
                                                Mes
                                            </th>
                                            <th>
                                                Importaciones
                                            </th>
                                            <th>
                                                Exportaciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ foreach (var item in Model)

                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor( modelItem => item.Anio) </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Mes) </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Importacion) </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Exportacion)</td>

                                                </tr>
                                            }
                                        }
                                   </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">            
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Gráfica periodo de 12 meses</h5>
                            </div>
                            <div class="ibox-content">
                                <div>
                                    <canvas id="barChart" height="140"></canvas>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
     <!-- ChartJS-->
     @Scripts.Render("~/Scripts/plugins/chartJs/Chart.min.js")
     <script>
         $(function () {

             var barData = {
                 labels: [
                    @{

                        string[] mes = new string[12];
             int c = 0;
             int c2 =0;
             foreach (var item in Model)
             {
                 c=Convert.ToInt32(item.Mes);
                 switch (c)
                 {
                     case 1:
                         mes[c2]="Enero"  ;
                         break;
                     case 2:
                         mes[c2]="Febrero"  ;
                         break;
                     case 3:
                         mes[c2]="Marzo"  ;
                         break;
                     case 4:
                         mes[c2]="Abril"  ;
                         break;
                     case 5:
                         mes[c2]="Mayo"  ;
                         break;
                     case 6:
                         mes[c2]="Junio"  ;
                         break;
                     case 7:
                         mes[c2]="Julio"  ;
                         break;
                     case 8:
                         mes[c2]="Agosto"  ;
                         break;
                     case 9:
                         mes[c2]="Septiembre"  ;
                         break;
                     case 10:
                         mes[c2]="Octubre"  ;
                         break;
                     case 11:
                         mes[c2]="Noviembre"  ;
                         break;
                     case 12:
                         mes[c2]="Diciembre"  ;
                         break;
                 }
                 c2++;

             }

             for (int i = 0; i < 12; i++)
             {
                 @:" @mes[i]  ",
              }



         }

                 ],
                 datasets: [
                     {
                         label: "Importaciones",
                         backgroundColor: 'rgba(220, 220, 220, 0.5)',
                         pointBorderColor: "#fff",
                         data: [ @foreach (var item in Model)
                             {
                             @item.Importacion @:,

                             }

                         ]
                     },
                     {
                         label: "Exportaciones",
                         backgroundColor: 'rgba(26,179,148,0.5)',
                         borderColor: "rgba(26,179,148,0.7)",
                         pointBackgroundColor: "rgba(26,179,148,1)",
                         pointBorderColor: "#fff",
                         data: [ @foreach (var item in Model)
             {
                   @item.Exportacion @:,

                   }

                         ]
                     }
                 ]
             };

             var barOptions = {
                 responsive: true
             };


             var ctx2 = document.getElementById("barChart").getContext("2d");
             new Chart(ctx2, { type: 'bar', data: barData, options: barOptions });

            


         });
     </script>

