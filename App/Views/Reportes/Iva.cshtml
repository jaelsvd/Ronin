@model IEnumerable<App.Entities.Reportes.ReporteIva>

@{
    ViewBag.Title = "Iva";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte IVA</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Reportes</a>
            </li>
            <li class="active">
                <strong>IVA</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Año</th>
                                <th>Mes</th>    
                                <th>Importe</th>
                                <th>Forma de Pago</th>  
                                <th>Cantidad Pedimentos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ foreach (var item in Model)
                                {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Anio)</td>
                                <td>@Html.DisplayFor(modelItem => item.Mes)</td>
                                <td>@Html.DisplayFor(modelItem => item.Importe)</td>
                                <td>@Html.DisplayFor(modelItem => item.FormaPagoDesc)</td>
                                <td>@Html.DisplayFor(modelItem => item.CantidadPedimentos)</td>
                             </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
