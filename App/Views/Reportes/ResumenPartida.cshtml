@model IEnumerable<App.Entities.Partida>

@{
    ViewBag.Title = "Partidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        font-size: 10px;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte Resumen de Partidas</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Reportes</a>
            </li>
            <li class="active">
                <strong>Resumen de Partidas</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
     
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Número Pedimento
                                    </th>
                                    <th>
                                        Patente
                                    </th>
                                    <th>
                                        Aduana
                                    </th>
                                    <th>
                                        Clave
                                    </th>
                                    <th>
                                        Tipo operación
                                    </th>
                                    <th>
                                        Rectificación
                                    </th>
                                    <th>
                                        Sec.
                                    </th>
                                    <th>
                                        Descripción Mercancía
                                    </th>
                                    <th>
                                        Fracción
                                    </th>
                                    <th>
                                        País Origen/Destino
                                    </th>
                                    <th>
                                        Precio Unitario
                                    </th>
                                    <th>
                                        Cant. UMC
                                    </th>
                                    <th>
                                        UMC
                                    </th>
                                    <th>
                                        Cant. UMT
                                    </th>
                                    <th>
                                        UMT
                                    </th>
                                    <th>
                                        Val. Comercial
                                    </th>
                                    <th>
                                        Val. Aduana
                                    </th>
                                    <th>
                                        Tasa
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("DetallePartida", "Partida",  new { numeroPartida = @Html.DisplayFor(modelItem => item.NumeroPartida ) , pedimentoId = @Html.DisplayFor(modelItem => item.PedimentoId) })">@Html.DisplayFor(modelItem => item.Pedimento.NumPedimento)</a>                                   
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pedimento.Patente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pedimento.Aduana)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pedimento.EncabezadoClavDocClave)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pedimento.EncabezadoOpDesc)
                                        </td>
                                        <td>
                                            @if (item.Pedimento.PedimentoOriginalRectificacion != 0)
                                            {
                                                @:Si
                                                }
                                            else
                                            {
                                                @:No
                                                }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumeroPartida)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DescMercancia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FraccionArancelaria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaisOrigDestDesc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioUnitaro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CantidadUnidadMedidaComercial)
                                        </td>
                                        <td>
                                             @Html.DisplayFor(modelItem => item.UnidadMedComerClave)                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CantidadUnidadMedidaTarifa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnidadMedTarifaClave)
                                        </td>
                                        <td>
                                            @string.Format("{0:C}", item.ValorComercial);
                                        </td>
                                        <td>
                                            @string.Format("{0:C}", item.ValorAduana);
                                        </td>
                                        <td>

                                        </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
