<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title> @ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/font-awesome/css")

    <!-- ========================== Styles ========================== -->
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Content/css/plugins/dataTables/datatables.min.css")
    @Styles.Render("~/Content/css/animate.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/font-awesome/fonts/glyphicons-halflings-regular.ttf")
    @Styles.Render("~/Content/font-awesome/fonts/glyphicons-halflings-regular.woff")
    @Styles.Render("~/Content/font-awesome/fonts/glyphicons-halflings-regular.woff2")
    @Styles.Render("~/Content/iCheck/custom.css")
    @Styles.Render("~/Content/app.css")

    
    <!-- ========================== Scripts ========================== -->
    @Scripts.Render("~/Scripts/Site.js")
    <!-- Mainly scripts -->
    @Scripts.Render("~/Scripts/jquery-2.1.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/plugins/metisMenu/metisMenu.min.js")
    @Scripts.Render("~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js")
    <!--  Data Tables -->
    @Scripts.Render("~/Scripts/plugins/dataTables/datatables.min.js")


</head>
<body>

    <!-- Wrapper-->
    <div id="wrapper">

        <!-- Navigation -->
       @Html.Partial("_Navigation") 

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg">

            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            @Html.Partial("_Footer")

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->

