@model IEnumerable<App.Entities.Pedimento>
@{
    ViewBag.Title = "Pedimentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Pedimento Completo</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                       Número Pedimento
                                    </th>
                                    <th>
                                        Aduana
                                    </th>
                                    <th>
                                        Patente
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EncabezadoOpDesc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EncabezadoClavDocClave)
                                    </th>
                                    <th>
                                        V. Aduana
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CurpApoderadoMandatario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CantidadPartidas)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EncabezadoTipoCambio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EncabezadoPesoBruto)
                                    </th>
                                    @*<th>
                                        Fecha Pago
                                    </th>*@
                                    @*<td>
                                       Fechas
                                    </td>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="pointer" onclick="location.href='@Url.Action("DetallePedimento", "Pedimento", new { id = @Html.DisplayFor(modelItem => item.Id) })'">

                                        <td>
                                            <a href="@Url.Action("DetallePedimento", "Pedimento", new { id = @Html.DisplayFor(modelItem => item.Id) })"> @Html.DisplayFor(modelItem => item.NumPedimento)</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Aduana)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Patente)
                                        </td>
                                        <td>
                                            @if (item.CantidadPartidas == 0)
                                            {
                                                @:Complementario
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.EncabezadoOpDesc)
                                            }
                                        </td>
                                        <td>
                                            @if (item.CantidadPartidas == 0)
                                            {
                                                @:CT
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.EncabezadoClavDocClave)
                                            }


                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ValorAduanaTotal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CurpApoderadoMandatario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CantidadPartidas)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EncabezadoTipoCambio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EncabezadoPesoBruto)
                                        </td>
                                        @*<td>
                                            Fecha
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>       
    </div>
</div>
